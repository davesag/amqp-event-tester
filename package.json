{
  "name": "@davesag/amqp-event-tester",
  "version": "1.0.5",
  "description": "A simple AMQP event listener that can be configured to listen for your event emitter's events and return a configurable test result. Use this for integration testing of your event emitters.",
  "main": "index.js",
  "engines": {
    "node": ">= 10.15.1",
    "npm": ">= 6.5.0"
  },
  "scripts": {
    "eslint-check": "eslint --print-config .eslintrc.js | eslint-config-prettier-check",
    "lint": "eslint .",
    "prettier": "prettier --write '**/*.{js,json,md}'",
    "start": "NODE_PATH=. node index.js",
    "backend": "docker-compose up -d amqp",
    "test": "npm run test:unit",
    "test:integration": "find ./test/integration -name '*.spec.js' | NODE_ENV=test NODE_PATH=. xargs mocha --require ./test/integration/test_helper.js --bail",
    "test:unit": "find ./test/unit -name '*.spec.js' | NODE_ENV=test NODE_PATH=. xargs mocha --require ./test/unit/test_helper.js",
    "test:unit:cov": "find ./test/unit -name '*.spec.js' | NODE_ENV=test NODE_PATH=. xargs nyc mocha --require ./test/unit/test_helper.js"
  },
  "keywords": [
    "amqp",
    "message-queue",
    "pubsub",
    "pub-sub",
    "publisher",
    "subscriber",
    "microservices",
    "micro-services"
  ],
  "author": "Dave Sag <davesag@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davesag/amqp-event-tester.git"
  },
  "bugs": {
    "url": "https://github.com/davesag/amqp-event-tester/issues"
  },
  "homepage": "https://github.com/davesag/amqp-event-tester#readme",
  "dependencies": {
    "amqp-simple-pub-sub": "^1.0.8",
    "dotenv": "^7.0.0"
  },
  "devDependencies": {
    "ajv": "^6.10.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-mocha": "^5.3.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "faker": "^4.1.0",
    "husky": "^2.0.0",
    "lint-staged": "^8.1.5",
    "mocha": "^6.1.2",
    "nyc": "^14.0.0",
    "prettier": "^1.16.4",
    "proxyquire": "^2.1.0",
    "sinon": "^7.3.1",
    "sinon-chai": "^3.3.0",
    "wait-until": "0.0.2"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "proseWrap": "never"
  },
  "lint-staged": {
    "**/*.{js,json}": [
      "prettier --single-quote --no-semi --write",
      "git add"
    ]
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/index.js",
      "src/utils/logger.js"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "all": true,
    "cache": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
