{
  "name": "@davesag/amqp-event-tester",
  "version": "1.1.3",
  "description": "An AMQP event listener that can be configured to listen for your event emitter's events and return a configurable test result. Use this for integration testing of your event emitters.",
  "author": "Dave Sag <davesag@gmail.com>",
  "type": "commonjs",
  "license": "MIT",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/davesag"
  },
  "private": true,
  "directories": {
    "lib": "src",
    "test": "test"
  },
  "main": "index.js",
  "engines": {
    "node": ">= 12.13.0",
    "npm": ">= 6.5.0"
  },
  "scripts": {
    "eslint-check": "eslint --print-config src/index.js | eslint-config-prettier-check",
    "lint": "eslint .",
    "prettier": "prettier --write '**/*.{js,json,md}'",
    "start": "NODE_PATH=. node index.js",
    "backend": "docker-compose up -d amqp",
    "test": "npm run test:unit",
    "test:integration": "NODE_ENV=test NODE_PATH=. mocha ./test/integration/ --require ./test/integrationTestHelper.js --file ./test/integration/testInit.js --recursive --bail",
    "test:unit": "NODE_ENV=test NODE_PATH=. mocha ./test/unit/ --require ./test/unitTestHelper.js --recursive",
    "test:unit:cov": "NODE_ENV=test NODE_PATH=. nyc mocha ./test/unit/ --require ./test/unitTestHelper.js --recursive",
    "test:mutants": "NODE_PATH=. NODE_ENV=test npx stryker run"
  },
  "keywords": [
    "amqp",
    "message-queue",
    "pubsub",
    "pub-sub",
    "publisher",
    "subscriber",
    "microservices",
    "micro-services"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/davesag/amqp-event-tester.git"
  },
  "bugs": {
    "url": "https://github.com/davesag/amqp-event-tester/issues"
  },
  "homepage": "https://github.com/davesag/amqp-event-tester#readme",
  "dependencies": {
    "amqp-simple-pub-sub": "^1.0.11",
    "dotenv": "^8.2.0"
  },
  "devDependencies": {
    "@stryker-mutator/core": "^2.5.0",
    "@stryker-mutator/javascript-mutator": "^3.0.0",
    "@stryker-mutator/mocha-framework": "^2.5.0",
    "@stryker-mutator/mocha-runner": "^2.5.0",
    "ajv": "^6.12.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-mocha": "^6.3.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "faker": "^4.1.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "mocha": "^7.1.0",
    "nyc": "^15.0.0",
    "prettier": "^1.19.1",
    "proxyquire": "^2.1.3",
    "sinon": "^9.0.0",
    "sinon-chai": "^3.5.0",
    "wait-until": "0.0.2"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "proseWrap": "never"
  },
  "lint-staged": {
    "**/*.{js,json}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/index.js",
      "src/utils/logger.js"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "all": true,
    "cache": true
  }
}
